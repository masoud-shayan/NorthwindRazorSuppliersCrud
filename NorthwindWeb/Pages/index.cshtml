@page
@functions
{

    public string DayName { get; set; }

    public void OnGet()
    {
        ViewData["Title"] = "Northwind Website";
        DayName = DateTime.Now.ToString("d");
    }
}


<div class="jumbotron">
    <h1 class="display-3">Welcome to Northwind!</h1>
    <p class="lead">We supply products to our customers.</p>
    <hr/>
    <p>it is @DayName ! Our customers include restaurants, hotels, and cruise lines.</p>
    <p>
        <a class="btn btn-primary" href="suppliers">Learn more about our suppliers</a>
    </p>
</div>